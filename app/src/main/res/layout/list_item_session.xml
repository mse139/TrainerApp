<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
        android:id="@+id/session_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="SessionDate"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="CustomerName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/session_date"/>

    <TextView
        android:id="@+id/session_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/session_complete"
        android:textColor="@color/colorGreen"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_name"/>

    <TextView
        android:id="@+id/session_paid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textSize="12sp"
        android:text="@string/session_paid"
        android:textColor="@color/colorGreen"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/customer_name"
        app:layout_constraintLeft_toRightOf="@+id/session_status"
        android:layout_marginLeft="32dp"/>
</android.support.constraint.ConstraintLayout>